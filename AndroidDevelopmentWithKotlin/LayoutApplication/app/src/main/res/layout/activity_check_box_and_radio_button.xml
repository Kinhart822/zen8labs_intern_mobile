<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".exercises.CheckBoxAndRadioButtonActivity">


    <Button
        android:id="@+id/btnTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AA82C2"
        android:text="Sở thích của thím: "
        android:textSize="24dp" />

    <CheckBox
        android:id="@+id/chkNgheNhac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f20"
        android:text="Nghe nhạc" />

    <CheckBox
        android:id="@+id/chkXemPhim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f20"
        android:text="Xem phim" />

    <CheckBox
        android:id="@+id/chkChoiTheThao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f20"
        android:text="Chơi thể thao" />

    <CheckBox
        android:id="@+id/chkShopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f20"
        android:text="Shopping" />

    <CheckBox
        android:id="@+id/chkDuLich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#f20"
        android:text="Du lịch" />

    <Button
        android:id="@+id/btnChonSoThich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Chọn sở thích" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AA82C2"
        android:textSize="24dp"
        android:text="Sở thích của bạn là: " />

    <EditText
        android:id="@+id/edtSoThich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Sở thích của bạn sẽ hiện tại đây"
        android:inputType="textMultiLine"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#AA82C2"
            android:textSize="24dp"
            android:text="Giới Tính: " />

        <RadioButton
            android:id="@+id/radNam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/radNu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nữ" />

        <Button
            android:id="@+id/btnXacNhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Xác nhận" />
    </RadioGroup>
</LinearLayout>