<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
<!--    &lt;!&ndash; ctrl + shift + / để bình Luận trong xml -->
<!--        1. Kích cỡ hình chữ nhật        -->
<!-- < size android:height="100dp" android:width="100dp"/> -->
<!--        2. Solid: màu nền khối shape    -->
    <solid android:color="#88FFFF"/>
<!--     3. strok : tô vién,để nét đứt liền-->
    <stroke android:color="#0000FF"
    android:width="1dp"
    android:dashGap="1dp"
    android:dashWidth="5dp"/>
<!--    size    -->
<!--    <size-->
<!--        android:height="100dp"-->
<!--        android:width="100dp"/>-->
<!--     bo góc     -->
<!--    radius : bo tất cả các góc      -->
<!--    bottomLeftRadius : bo góc dưới, trái    -->
<!--    bottomRightRadius : bo góc dưới, phải   -->
<!--    topRightRadius : bo góc trên, bên phải  -->
<!--    topLeftRadius : bo góc trên, bên trái   -->

    <corners
        android:radius="270dp"/>

    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"/>
<!--    dải mầu chay gradien https://webgradients.com/    -->
    <gradient
        android:startColor="#FF33FF"
        android:endColor="#33FFFF"
        android:centerColor="@color/white"
        android:angle="45"/>
</shape>
